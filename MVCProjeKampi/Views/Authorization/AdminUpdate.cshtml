@model EntityLayer.Concrete.Admin

@{
    ViewBag.Title = "AdminUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Admin Güncelle</h1>
<br />
<div class="container">
    @using (Html.BeginForm("AdminUpdate", "Authorization", FormMethod.Post))
    {
        <div class="form-group">
            @Html.HiddenFor(x => x.AdminID)
            @Html.HiddenFor(x => x.AdminCreatedID)
            @Html.HiddenFor(x => x.AdminCreatedDate)
            <br />
            @Html.Label("Admin Kullanıcı Adı:")
            @Html.TextBoxFor(x => x.AdminUserName, new { @class = "form-control" })
            <br />
            @Html.Label("Şifre:")
            <br />
            @Html.TextBoxFor(x => x.AdminPassword, new { @class = "form-control" })
            <br />
            @Html.Label("Rol:")
            @Html.TextBoxFor(x => x.AdminRole, new { @class = "form-control" })
            <br />
            <button class="btn btn-primary">Güncelle</button>
        </div>
    }
</div>