@model EntityLayer.Concrete.Content
@{
    ViewBag.Title = "ContentUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>İçerikler</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.1/css/bootstrap.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.5.2/css/buttons.bootstrap4.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.bootstrap4.min.css">
</head>
<body>
    <div class="card card-solid" style="border-radius:10px">
        <div>
            <section class="content-header bg-primary" style="border-radius:10px">
                <div class="container-fluid">
                    <div class="row">
                        <h1>İçerik Güncelleme</h1>
                    </div>
                </div><!-- /.container-fluid -->
            </section>

            <div class="card-body pb-0">
                <div class="row">
                    <div class="col-md-7">
                        @using (Html.BeginForm("ContentUpdate", "Content", FormMethod.Post))
                        {
                            <div class="form-group">
                                @Html.HiddenFor(x => x.ContentID)
                                @Html.HiddenFor(x => x.HeadingID)
                                @Html.HiddenFor(x => x.WriterID)
                                @Html.HiddenFor(x => x.ContentCreatedID)
                                @Html.HiddenFor(x => x.ContentCreatedDate)
                                @Html.Label("İçerik")
                                @Html.TextAreaFor(x => x.ContentValue, 10, 30, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.ContentValue, "", new { @class = "text-danger text-bold" })
                                <br />
                                <button class="btn btn-success">Ekle</button>
                            </div>
                        }
                    </div>
                    <div class="col-md-5 justify-content-center align-self-center">
                        <p>

                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>